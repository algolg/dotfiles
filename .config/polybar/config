[module/powermenu]
type = custom/text

format-spacing = 1
content = "⏻ "
content-foreground = ${colors.red}
label-font = 3
click-left = exec rofi -show power-menu -modi power-menu:rofi-power-menu -hover-select -me-select-entry '' -me-accept-entry MousePrimary -font "NotoSansMono Nerd Font 13" -theme ~/.config/rofi/power-menu-uncreative.rasi &

[module/now-playing]
type = custom/script

tail = true
format = <label>

exec = python3 ~/.config/polybar/scripts/polybarnowplaying.py
click-right = "kill -USR1 %pid%"

format-font = 1

[module/polywins]
type = custom/script
exec = ~/.config/polybar/scripts/polywins.sh 2>/dev/null
format = <label>
label-foreground = ${foreground}
label = %output%
label-padding = 1
tail = true

