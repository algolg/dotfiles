[module/powermenu]
type = custom/text

format-spacing = 1
content = "⏻ "
content-foreground = #ff5555
label-font = 3
click-left = exec rofi -show power-menu -modi power-menu:rofi-power-menu -font "NotoSansMono Nerd Font Bold 16" &

[module/now-playing]
type = custom/script

tail = true
format = <label>

exec = ~/.config/polybar/scripts/polybar-now-playing
click-right = "kill -USR1 $(pgrep --oldest --parent %pid%)"

format-font = 3

[module/polywins]
type = custom/script
exec = ~/.config/polybar/scripts/polywins.sh 2>/dev/null
format = <label>
label-foreground = ${foreground}
label = %output%
label-padding = 1
tail = true

