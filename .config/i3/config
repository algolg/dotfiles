bindsym $mod+ctrl+g exec compton; gaps inner all set 0; gaps outer all set 0; gaps top all set 0; exec killall polybar
bindsym $mod+shift+g  exec killall polybar; gaps outer all set $outer; gaps inner all set $wideinner; exec sh $HOME/.config/polybar/launch.sh -w
